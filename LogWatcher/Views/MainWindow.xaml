<Window xmlns:LogWatcher="clr-namespace:LogWatcher"  x:Class="LogWatcher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Watcher" Height="560" Width="925"
        xmlns:views="clr-namespace:LogWatcher.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Click="BtnBrowse_OnClick" Name="BtnBrowse" Content="Browse..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox Grid.Row="0" Name="TxtFilePath" HorizontalAlignment="Left" Height="23" Margin="90,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="737"/>
        <Button Grid.Row="0" Click="BtnStartPolling_OnClick" Name="BtnStartPolling" Content="Start polling" HorizontalAlignment="Left" Margin="832,10,0,0" VerticalAlignment="Top" Width="75"/>

        <TabControl Grid.Row="1" Margin="10" ItemsSource="{Binding Path=LogDisplayTabs}" >
        </TabControl>
    </Grid>
</Window>
